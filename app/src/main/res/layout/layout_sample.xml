<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="10"
        android:background="#303030"
        >
        <TextView
            android:layout_width="100dp"
            android:background="#ff00ff"
            android:layout_column="0"
            android:layout_row="0"
            />
        <TextView
            android:layout_width="100dp"
            android:background="#0f0fff"
            android:layout_column="1"
            android:layout_row="1"
            />
        <TextView
            android:layout_width="100dp"
            android:background="#0f0f40"
            android:layout_column="2"
            android:layout_row="2"
            />
        <TextView
            android:layout_width="100dp"
            android:background="#0fff27"
            android:layout_column="3"
            android:layout_row="3"
            />
        <TextView
            android:layout_width="200dp"
            android:background="#45d327"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="4"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#900f0f"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_rowSpan="2"
            />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#aaaaaa"
            android:text="          "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="#aa00aa"
            android:text="          "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#aa00ff"
            android:text="          "
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#303030"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#a0f0aa"
            android:text="          "
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#0ad0aa"
            android:text="          "
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#0a00aa"
            android:text="          "
            android:layout_gravity="right"
            />



    </LinearLayout>

</LinearLayout>